@model List<string>

@{
    ViewData["Title"] = "Sozcu Web Sitesinden Çekilen Linkler";
    var currentPage = ViewData["CurrentPage"] as int? ?? 1;
    var totalPages = ViewData["TotalPages"] as int? ?? 1;
    var searchQuery = ViewData["Search"] as string;
    var currentDateTime = ViewData["CurrentDateTime"] as string; // Tarih ve saat bilgisi
}



<div class="container mt-5">
    <!-- Başlık ve Açıklamalar -->
    <div class="text-center mb-4">
        <h3 class="display-5 text-primary"><strong>www.sozcu.com.tr</strong> adresinden çekilen bağlantılar</h3>
        @* <p class="lead text-muted">Aşağıda www.sozcu.com.tr adresinden çekilen tüm bağlantılar listelenmiştir.</p> *@

        <p id="date-time"></p>

    </div>
    <!-- Arama Formu - Başlık Altında -->
    <div class="text-center mb-4">
        <form method="get" class="d-flex justify-content-center">
            <input type="text" name="search" placeholder="Ara..." value="@ViewData["Search"]" class="form-control w-50 me-2" />
            <button type="submit" class="btn btn-primary">Ara</button>
        </form>
    </div>

    <div class="d-flex justify-content-between mb-2">
        <!-- Sayfa Numarası -->
        <div class="page-number-display text-end">
            <strong>Sayfa: @currentPage / @totalPages</strong>
        </div>
    </div>


    <!-- Link Listesi -->
    @if (Model != null && Model.Count > 0)
    {
        <div class="list-group">
            @foreach (var link in Model)
            {
                <a href="@link" class="list-group-item list-group-item-action" target="_blank">
                    @link
                </a>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            Linkler çekilemedi veya sayfa boş.
        </div>
    }

    <!-- Sayfalama -->
    <br/>
    <nav>
        <ul class="pagination justify-content-center">
            @if (currentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1, pageSize = 10 })" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = 10 })">@i</a>
                </li>
            }

            @if (currentPage < totalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1, pageSize = 10 })" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        </ul>
        @if (currentPage > 1)
        {
            <div class="mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Geri Dön</a>
            </div>
        }
        @if (!string.IsNullOrEmpty(searchQuery))
        {
            <div class="mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Geri Dön</a>
            </div>
        }
    </nav>
</div>



